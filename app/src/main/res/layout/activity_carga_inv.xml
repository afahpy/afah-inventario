<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:style="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="inventario.inventario.CargaInvActivity"
    android:background="#E8EAF4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:orientation="vertical">

              <LinearLayout
                    android:id="@+id/bo"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                     <EditText
                         android:id="@+id/searchId"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:iconifiedByDefault="false"
                         android:layout_weight="1"
                         android:hint="Cod.Original del Articulo"
                         android:textSize="14dp">
                    </EditText>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_action_search"
                        android:text="Buscar"
                        android:id="@+id/btnSearch"
                        android:layout_weight="1"
                        android:background="@drawable/button_style"
                        style="?attr/buttonBarButtonStyle"/>

              </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputlayoutdes"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style:hintTextAppearance="@style/Hint"
                android:background="@drawable/style">
            <EditText
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripci贸n"
                android:textSize="16dp"
                android:textColor="#000000"/>

            </android.support.design.widget.TextInputLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Introducir detalles del Articulo"
                android:gravity="center"
                android:textColor="@color/colorPrimary"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputlayoutid"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style:hintTextAppearance="@style/Hint"
                android:background="@drawable/style">

                <EditText
                    android:id="@+id/idArt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="C贸digo Articulo"
                    android:textSize="16dp"
                    android:textColor="#000000"/>


            </android.support.design.widget.TextInputLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputlayoutcod"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style:hintTextAppearance="@style/Hint"
                android:background="@drawable/style">

                <EditText
                    android:id="@+id/codBarra"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="C贸digo de barra"
                    android:textSize="16dp"
                    android:inputType="textCapCharacters"/>

            </android.support.design.widget.TextInputLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputlayoutcantidad"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style:hintTextAppearance="@style/Hint"
                android:background="@drawable/style">

                <EditText
                    android:id="@+id/cantidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cantidad"
                    android:inputType="numberDecimal"
                    android:textSize="16dp" />

            </android.support.design.widget.TextInputLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputlayoutubic"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style:hintTextAppearance="@style/Hint"
                android:background="@drawable/style">

                <EditText
                    android:id="@+id/ubi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ubicaci贸n"
                    android:textSize="16dp"
                    android:inputType="textCapCharacters"
                    />

            </android.support.design.widget.TextInputLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:id="@+id/bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/boton_cancelar"
                    style=""
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancelar"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_style"
                    android:drawableLeft="@drawable/ic_action_cancel"/>
                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/boton_aceptar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="?attr/buttonBarButtonStyle"
                    android:text="Guardar"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_style"
                    android:drawableLeft="@drawable/ic_action_save"/>

            </LinearLayout>
        </LinearLayout>
</ScrollView>



</RelativeLayout>
