<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:style="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/rl"
    tools:context="inventario.inventario.CargaInvActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <LinearLayout
                style="@style/LinearLayoutHorizontal">


                <android.support.design.widget.TextInputLayout
                    style="@style/TextInputLayout"
                    style:hintTextAppearance="@style/Hint"
                    android:background="@drawable/style">


                    <EditText
                        android:id="@+id/marca"
                        android:hint="Codigo Marca"
                        style="@style/EditText"
                        android:inputType="textCapCharacters"/>



                </android.support.design.widget.TextInputLayout>


                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"/>


                <Button
                    android:id="@+id/btnMarca"
                    android:background="@drawable/button_style"
                    style="@style/BtnSearch"/>

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp"/>

            <LinearLayout
                style="@style/LinearLayoutHorizontal">

                <android.support.design.widget.TextInputLayout
                    style="@style/TextInputLayout"
                    style:hintTextAppearance="@style/Hint"
                    android:background="@drawable/style">


                    <EditText
                        android:id="@+id/original"
                        style="@style/EditText"
                        android:hint="Codigo Original"
                        android:inputType="textCapCharacters"/>

                </android.support.design.widget.TextInputLayout>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnOriginal"
                    android:background="@drawable/button_style"
                    style="@style/BtnSearch" />

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp"/>


            <LinearLayout
                style="@style/LinearLayoutHorizontal">

                <android.support.design.widget.TextInputLayout
                    style="@style/TextInputLayout"
                    style:hintTextAppearance="@style/Hint"
                    android:background="@drawable/style">


                    <EditText
                        android:id="@+id/proveedor"
                        style="@style/EditText"
                        android:hint="Codigo Proveedor"
                        android:inputType="textCapCharacters"/>

                </android.support.design.widget.TextInputLayout>


                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnProveedor"
                    android:background="@drawable/button_style"
                    style="@style/BtnSearch"/>

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp"/>

            <LinearLayout
                style="@style/LinearLayoutHorizontal">

                <android.support.design.widget.TextInputLayout
                    style="@style/TextInputLayout"
                    style:hintTextAppearance="@style/Hint"
                    android:background="@drawable/style">


                    <EditText
                        android:id="@+id/codBarra"
                        style="@style/EditText"
                        android:hint="Codigo de Barra"
                        android:inputType="textCapCharacters"/>

                </android.support.design.widget.TextInputLayout>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnBarra"
                    android:background="@drawable/button_style"
                    style="@style/BtnSearch"/>

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp"/>


        <LinearLayout
            style="@style/LinearLayoutHorizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="90dp"
                android:layout_height="49dp"
                style:hintTextAppearance="@style/Hint"
                android:background="@drawable/style">

                <EditText
                    android:id="@+id/idArt"
                    android:hint="Id Articulo"
                    android:editable="false"
                    style="@style/EditText"/>

            </android.support.design.widget.TextInputLayout>


            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style:hintTextAppearance="@style/Hint"
                android:background="@drawable/style">

                <EditText
                    style="@style/EditText"
                    android:id="@+id/desc"
                    android:focusable="false"
                    android:hint="Descripción" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>



            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Introducir detalles del Articulo"
                android:gravity="center"
                android:textColor="@color/colorPrimary"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputlayoutcantidad"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    style:hintTextAppearance="@style/Hint"
                    android:background="@drawable/style">

                    <EditText
                        android:id="@+id/cantidad"
                        style="@style/EditText"
                        android:hint="Cantidad"
                        android:inputType="numberDecimal"/>

                </android.support.design.widget.TextInputLayout>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputlayoutubic"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    style:hintTextAppearance="@style/Hint"
                    android:background="@drawable/style">

                    <EditText
                        android:id="@+id/ubi"
                        android:hint="Ubicación"
                        style="@style/EditText"
                        android:inputType="textCapCharacters"/>

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style:hintTextAppearance="@style/Hint"
                android:background="@drawable/style">


                <EditText
                    android:id="@+id/cBarra"
                    style="@style/EditText"
                    android:hint="Codigo de Barra"
                    android:inputType="textCapCharacters"/>

            </android.support.design.widget.TextInputLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>


            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <LinearLayout
                style="@style/LinearLayoutHorizontal">

                <Button
                    android:id="@+id/boton_cancelar"
                    style=""
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancelar"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_style"
                    android:drawableLeft="@drawable/ic_action_cancel"/>
                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/boton_aceptar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="?attr/buttonBarButtonStyle"
                    android:text="Guardar"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_style"
                    android:drawableLeft="@drawable/ic_action_save"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>




   </RelativeLayout>


